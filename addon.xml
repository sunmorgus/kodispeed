<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.kodispeed"
       name="kodispeed"
       version="1.0.0">
  <requires>
    <import addon="xbmc.python" 
    		version="2.14.0"/>
  </requires>
  <extension point="xbmc.python.script"
             library="addon.py" />
  <extension point="xbmc.addon.metadata">
    <summary>Internet speedtest for kodi.</summary>
    <description>Uses speedtest-cli (must be installed seperately) to provide internet speedtest results.</description>
    <platform>all</platform>
    <license>MIT</license>
    <source>https://github.com/sunmorgus/kodispeed</source>
    <website>https://github.com/sunmorgus/kodispeed</website>
    <assets>
     <icon>icon.png</icon>
    </assets>
  </extension>
</addon>
